{
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020"
    }
  },
  "include": ["src", "test"]
}
